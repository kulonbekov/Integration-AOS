<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

    <grid name="ens.product-grid" title="Product" model="com.axelor.apps.base.db.Product">
        <field name="productNumber"/>
        <field name="name"/>
        <field name="tnvedPositionCode.code"/>
        <field name="grossWeight"/>
    </grid>

    <form name="ens.product-form" title="Product" model="com.axelor.apps.base.db.Product" canAttach="false">
        <panel name="mainPanel" colSpan="12" itemSpan="12">
            <field name="productNumber"/>
            <field name="name"/>
            <field name="description"/>
            <field name="tnvedPositionCode"/>
            <field name="grossWeight"/>
            <field name="hSCode"/>
        </panel>
    </form>

</object-views>